#
# wm independent hotkeys
#

super + shift + w
    qutebrowser

mod1 + shift + w
	firefox

mod1 + t 
    telegram

mod1 + f
	thunar

ctrl + Print
	flameshot

super + ctrl + o
    dmenu-config-editor

super + shift + End
    xterm -sk -e htop

super + shift + Home
    xterm -sk -e lf

super + shift + Page_Down
    xterm -e nmtui

super + shift + Page_Up
    xterm -sk -e w3m ddg.gg

ctrl + space
      rofi -show drun -theme /home/woland/.config/rofi/launchers/type-3/style-4.rasi

mod1 + ctrl + s
	word-lookup

mod1 + g
    dmenu-search

